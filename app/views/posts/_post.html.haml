%tr.clickable
  %td
    = post.id
  %td
    = post.date
  %td
    = post.hours
  %td
    = link_to (truncate post.rationale), post
  %td
    = post.user.full_name
  %td
    = status_label(post.status)
  %td
    - if policy(post).update?
      = link_to '', edit_post_path(post), id: "edit-post-#{post.id}", class: 'glyphicon glyphicon-pencil index-icons'
  %td
    = link_to '', post_path(post), method: :delete, id: "delete-post-#{post.id}", class: 'glyphicon glyphicon-trash index-icons', data: {confirm: 'Are you sure?'}